{
  "name": "@ryu/deno-lint-plugin-tailwindcss",
  "version": "0.1.0",
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts"
    ],
    "exclude": ["src/**/*_test.ts"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "tasks": {
    "test": "deno test -R",
    "test:coverage": "deno test -R --coverage"
  },
  "lint": {
    "plugins": ["./src/mod.ts"],
    "exclude": ["tests/testdata"]
  },
  "fmt": {
    "proseWrap": "preserve"
  }
}
